{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:evoker",
      "population_control": "monster"
    },
    "conditions": [
      {
        "minecraft:structure_filter": {
          "structure_id": "woodland_mansion",
          "block_filters": [
            "minecraft:wood",
            "minecraft:planks"
          ],
          "allow_inside": true,
          "allow_outside": false
        },
        "minecraft:spawns_on_block_filter": {
          "blocks": [
            "minecraft:wood",
            "minecraft:planks",
            "minecraft:carpet"
          ]
        },
        "minecraft:weight": {
          "default": 40 // Sets the 40% relative chance
        },
        "minecraft:brightness_filter": {
          "min": 0,
          "max": 7,
          "adjust_for_weather": true
        },
        "minecraft:distance_filter": {
          "min": 16,
          "max": 48
        }
      }
    ]
  }
}
