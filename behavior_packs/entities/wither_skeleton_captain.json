{
  "format_version": "1.10.0",
  "minecraft:entity": {
    "description": {
      "identifier": "convertedjava:wither_skeleton_captain",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "components": {
      "minecraft:health": {
        "value": 30,
        "max": 30
      },
      "minecraft:nameable": {},
      "minecraft:collision_box": {
        "width": 0.7,
        "height": 2.4
      },
      "minecraft:type_family": {
        "family": [
          "wither_skeleton",
          "monster",
          "undead",
          "mob"
        ]
      },
      "minecraft:loot": "loot_tables/entities/wither_skeleton_captain.json",
      "minecraft:equipment": {
        "table": "loot_tables/gameplay/equipment_wither_skeleton_captain.json"
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.melee_attack": {
        "priority": 2,
        "speed_multiplier": 1.2,
        "track_target": true
      },
      "minecraft:behavior.wither_random_attack_pos_goal": {
        "priority": 4,
        "interval": 2,
        "speed_multiplier": 1.0
      },
      "minecraft:behavior.look_at_player": {
        "priority": 5,
        "look_distance": 8.0,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 6
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": true,
        "reassess_tame": true,
        "target_selection_method": "nearest",
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 64
          }
        ]
      },
      "minecraft:leashable": {},
      "minecraft:burns_in_daylight": {},
      "minecraft:mob_effect": {
        "effect_range": 4.0,
        "effect_time": 10,
        "mob_effect": "wither"
      },
      "minecraft:tameable": {
        "tame_items": [],
        "tame_item_failure_to_write_tag": "!convertedjava:tamed"
      },
      "minecraft:interact": [
        {
          "on_interact": {
            "filters": {
              "test": "has_tag",
              "subject": "self",
              "operator": "!=",
              "value": "convertedjava:tamed"
            },
            "event": "convertedjava:taming_attempt"
          },
          "use_item": true,
          "interact_text": "action.interact.tame"
        }
      ]
    },
    "events": {
      "convertedjava:taming_attempt": {
        "run_command": {
          "command": [
            "tag @s add taming_check",
            "function convertedjava:captain_tame"
          ]
        }
      },
      "convertedjava:set_tamed": {
        "run_command": {
          "command": [
            "tag @s remove taming_check",
            "tag @s add convertedjava:tamed",
            "tag @p[r=5] add captain_owner",
            "tellraw @a {\"rawtext\":[{\"selector\":\"@p\"},{\"text\":\" has tamed the Wither Skeleton Captain!\"}]}"
          ]
        },
        "add": {
          "component_groups": [
            "convertedjava:captain_tamed"
          ]
        }
      }
    },
    "component_groups": {
      "convertedjava:captain_tamed": {
        "minecraft:is_tamed": {},
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "must_see": true,
          "target_selection_method": "nearest",
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "!=",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "!=",
                    "value": "wither_skeleton"
                  }
                ]
              },
              "max_dist": 64
            }
          ]
        }
      }
    }
  }
}
